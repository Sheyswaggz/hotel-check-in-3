# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Server Configuration
# Port number for the application server (default: 3000)
PORT=3000

# Node Environment
# Options: development, production, test
# Controls logging verbosity, error handling, and performance optimizations
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Connection URL
# Format: postgresql://username:password@host:port/database
# Example: postgresql://hoteluser:securepassword@localhost:5432/hotel_checkin
# REQUIRED: Replace with your actual database credentials
DATABASE_URL=postgresql://username:password@localhost:5432/hotel_checkin

# Database Pool Configuration (Optional)
# Maximum number of database connections in the pool
# DB_POOL_MAX=10

# Minimum number of database connections in the pool
# DB_POOL_MIN=2

# Connection timeout in milliseconds
# DB_CONNECTION_TIMEOUT=30000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret Key
# CRITICAL: Generate a strong, random secret for production
# Use: openssl rand -base64 64
# REQUIRED: Replace with a secure random string (minimum 32 characters)
# SECURITY WARNING: Never commit the actual secret to version control
JWT_SECRET=your-secret-key-change-in-production

# JWT Token Expiration
# Format: number + unit (s=seconds, m=minutes, h=hours, d=days)
JWT_EXPIRES_IN=24h

# JWT Authentication Enabled
# Set to false to disable JWT authentication (development only)
JWT_ENABLED=true

# JWT Refresh Token Expiration
# JWT_REFRESH_EXPIRES_IN=7d

# Password Hashing Rounds
# Higher values = more secure but slower (recommended: 10-12)
# BCRYPT_ROUNDS=10

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Rate Limiting
# Maximum requests per window per IP address
# RATE_LIMIT_MAX=100

# Rate limit window in milliseconds (15 minutes = 900000)
# RATE_LIMIT_WINDOW=900000

# API Version
# API_VERSION=v1

# CORS Allowed Origins
# Comma-separated list of allowed origins for CORS
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level
# Options: error, warn, info, http, verbose, debug, silly
# LOG_LEVEL=info

# Log Format
# Options: json, simple, combined
# LOG_FORMAT=json

# Enable Request Logging
# LOG_REQUESTS=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Maximum file upload size in bytes (10MB = 10485760)
# MAX_FILE_SIZE=10485760

# Allowed file upload types (comma-separated MIME types)
# ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# File upload directory
# UPLOAD_DIR=./uploads

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP Configuration for sending emails
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=noreply@example.com
# SMTP_PASSWORD=your-smtp-password
# EMAIL_FROM=Hotel Check-in <noreply@example.com>

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Redis Configuration (for caching and sessions)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=
# REDIS_DB=0

# AWS S3 Configuration (for file storage)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=hotel-checkin-uploads

# Payment Gateway Configuration
# PAYMENT_GATEWAY_API_KEY=your-payment-gateway-key
# PAYMENT_GATEWAY_SECRET=your-payment-gateway-secret
# PAYMENT_GATEWAY_WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# MONITORING & OBSERVABILITY (Optional)
# =============================================================================

# Application Performance Monitoring
# APM_SERVICE_NAME=hotel-checkin-api
# APM_SERVER_URL=http://localhost:8200
# APM_SECRET_TOKEN=

# Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=development

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Enable/disable specific features
# FEATURE_ONLINE_CHECKIN=true
# FEATURE_MOBILE_KEY=false
# FEATURE_PAYMENT_PROCESSING=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable debug mode (verbose logging and error details)
# DEBUG=false

# Enable API documentation endpoint
# ENABLE_API_DOCS=true

# Enable GraphQL Playground
# ENABLE_GRAPHQL_PLAYGROUND=true